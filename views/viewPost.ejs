<script>
  function myFunction() {
    document.getElementById("go").style.color = "red";
  }
  </script>
  </head>

  
  <body>
    <div><%- include('navbar.ejs') %></div>
    <div class="container">
      <h3>View Post</h3>
      <hr />

      <div>
        <% for(let i = 0; i < post.length; i++) { %>
        <div>
          <h2>Title: <%= post[i].title %></h2>
          <br />
